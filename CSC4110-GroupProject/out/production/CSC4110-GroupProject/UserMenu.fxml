<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UserMenuController">
   <children>
      <ImageView fx:id="myImageView" fitHeight="275.0" fitWidth="452.0" layoutX="75.0" layoutY="110.0" preserveRatio="true">
         <image>
            <Image url="@engineering.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></ImageView>
      <Label layoutX="97.0" layoutY="57.0" text="WSU Inc. Wholesale Food">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <MenuBar fx:id="myMenuBar" layoutY="2.0" prefHeight="25.0" prefWidth="601.0">
        <menus>
            <Menu mnemonicParsing="false" text="File">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Search">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#switchSearchCustomerProfile" text="Customer Profile" />
                  <MenuItem mnemonicParsing="false" text="Vendor profile" />
                  <MenuItem mnemonicParsing="false" onAction="#switchToSearchItemMenuBar" text="Item profile" />
                  <MenuItem fx:id="CreatePurchaseOrderButton" mnemonicParsing="false" onAction="#switchToPurchaseOrderViewMenuBar" text="Purchase Order" />
                  <MenuItem mnemonicParsing="false" onAction="#switchToSearchUserProfile" text="User profile" />
               </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Create">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#switchCreateCustomerProfile" text="Customer Profile" />
                  <MenuItem mnemonicParsing="false" onAction="#switchToCreateVendorProfile" text="Vendor profile" />
                  <MenuItem mnemonicParsing="false" onAction="#switchToCreateItemProfileSceneMenuBar" text="Item profile" />
                  <MenuItem mnemonicParsing="false" onAction="#switchToPurchaseOrderMenuBar" text="Purchase order" />
                  <MenuItem mnemonicParsing="false" onAction="#switchToCreateUserProfile" text="User profile" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Delete">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#switchDeleteCustomerProfile" text="Customer Profile" />
                  <MenuItem mnemonicParsing="false" text="Vendor profile" />
                  <MenuItem mnemonicParsing="false" onAction="#switchToDeleteItemMenuBar" text="Item profile" />
                  <MenuItem mnemonicParsing="false" onAction="#switchToDeleteUserProfile" text="User profile" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#switchUpdateCustomerProfile" text="Customer profile" />
                  <MenuItem mnemonicParsing="false" text="Vendor profile" />
                  <MenuItem mnemonicParsing="false" onAction="#switchToUpdateItemMenuBar" text="Item profile" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Help">
              <items>
                <MenuItem mnemonicParsing="false" text="about" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
      <Button fx:id="logoutButton" layoutX="546.0" mnemonicParsing="false" onAction="#switchToLoginValidation" prefHeight="25.0" prefWidth="54.0" text="Logout" />
   </children>
</AnchorPane>
